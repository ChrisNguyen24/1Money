<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingTop="50dp"
    tools:context=".fragmentBottom.FragmentHome">
    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/rev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="List complete"
        app:layout_constraintTop_toBottomOf="@+id/rev"
        android:id="@+id/DoneTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/revDone"
        app:layout_constraintTop_toBottomOf="@id/DoneTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
    <androidx.appcompat.widget.SearchView
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#eee"
        android:id="@+id/serView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.appcompat.widget.SearchView>
</androidx.constraintlayout.widget.ConstraintLayout>